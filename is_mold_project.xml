<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>

    <!-- Moule : formulaire standard -->
    <record model="ir.ui.view" id="is_mold_project_form_view">
      <field name="name">is_mold_project_form_view</field>
      <field name="model">is.mold.project</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <!-- ATTENTION : Pour pouvoir utiliser la balise <sheet> qui permet d'avoir une plus 
        belle mise en page il est obligatoire de mette 'version="7" -->
        <form string="Form" version="7.0">  
        <sheet>
          <group col="2" colspan="4">
            <field name="name"/> 
            <field name="designation"/> 
          </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- Moule : tree -->
    <record model="ir.ui.view" id="is_mold_project_tree_view">
      <field name="name">is_mold_project_tree_view</field>
      <field name="model">is.mold.project</field>
      <field name="type">tree</field>
       <field name="arch" type="xml">
        <tree string="Mold">
          <field name="name"/>
          <field name="designation"/> 
        </tree>
      </field>
    </record>


    <!-- Moule : Recherche -->
    <record model="ir.ui.view" id="is_mold_project_filter_view" >
      <field name="name">is_mold_project_filter_view</field>
      <field name="model">is.mold.project</field>
      <field name="arch" type="xml">
      <search string="Recherche Moule">
        <field name="name"        filter_domain="[('name', 'ilike', self)]"/>
        <field name="designation" filter_domain="[('designation', 'ilike', self)]"/>
      </search>
      </field>
    </record>


    <!-- Moule : action -->
    <record model="ir.actions.act_window" id="is_mold_project_action">
      <field name="name">Projets</field>
      <field name="res_model">is.mold.project</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_is_mold_project" sequence="12" name="Projets des moules" parent="mrp.menu_mrp_bom" action="is_mold_project_action" />

  </data>
</openerp>
